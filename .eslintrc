{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "rules": {
        "linebreak-style":"off",
        "indent": ["error", 4],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always",
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["dist/js", "node_modules", "gulpfile.js", "src/js/import"]
}